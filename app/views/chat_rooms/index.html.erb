<h1>Online Users</h1>

<% @users.each do |user| %>
  <% if user != current_user %>
    <%= user.name %>
    <%= link_to "Send Message", chat_rooms_path(sender_id: current_user.id, recepient_id: user.id), method: 'post' %>
  <% end %>
  <br>
<% end %>

<h2>My Chats</h2>

<% @chat_rooms_all.each do |chat| %>
  <% if(chat.sender_id = current_user.id || chat.recepient_id = current_user.id) %>
    <%= chat.recepient_id %>
    	<% @users.each do |user| %>
  			<% if(user.id = chat.recepient_id)%>
    			<%= user.name %>
    			<% break %>
  			<% end %>
  		<% end %>
    <%= link_to "Open Chat", chat_rooms_path(sender_id: current_user.id, recepient_id: chat.recepient_id), method: 'post' %>
  <% end %>
  <br>
<% end %>